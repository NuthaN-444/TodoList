{
  "name": "todolist-backend",
  "root": "backend",
  "start": "npm start",
  "env": {
    "MONGODB_URL": "YOUR_MONGO_URL",
    "PORT": "5000"
  },
  "healthcheck": "/health",
  "healthcheckTimeout": 30,
  "restartPolicy": {
    "type": "on-failure",
    "retries": 0
  },
  "serverless": false,
  "region": "asia-southeast"
}